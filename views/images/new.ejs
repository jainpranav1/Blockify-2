<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blockify</title>
    <%- include('../bootstrap') %>
</head>

<body>
    <%- include('../navbar') %>

    <div class="text-center">
        <form style="max-width:480px;margin:auto;" method="POST" action="/images/new" enctype="multipart/form-data">
            <h1 class="mb-3">New Image</h1>
            <div class="form-group mb-3">
                <label class="form-label" for="image_name">Name</label>
                <input required autofocus type="text" class="form-control" id="image_name" name="image_name">
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea required class="form-control" id="description" name="description"></textarea>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="image">File (png, jpeg, pdf)</label>
                <input required type="file" class="form-control" id="image" name="image">
            </div>
            <button type="submit" class="btn btn-primary">Create Image</button>
        </form>
    </div>

</body>

</html>