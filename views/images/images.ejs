<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blockify</title>
    <%- include('../bootstrap') %>
</head>

<body>
    <%- include('../navbar') %>

    <div class="text-center" style="max-width:400px;margin:auto;">
        <h1 class="mb-3">Images</h1>
        <a href="/images/new" class="btn btn-primary">New Image</a>

        <% images.forEach(image => { %>
            <div class="card mt-4">
                <div class="card-body">
                <h5 class="card-title"><%= image.image_name %></h5>
                <p class="card-text"><%= image.description %></p>
                <form method="POST" action="/images/delete/<%= image.id %>">
                    <a href="/images/show/<%= image.id %>" class="btn btn-primary btn-sm">Show</a>
                    <a href="/images/edit/<%= image.id %>" class="btn btn-success btn-sm">Edit</a>
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this image?');" class="btn btn-danger btn-sm">Delete</button>
                </form>
                </div>
            </div>
        <% }) %>
    </div>

</body>

</html>